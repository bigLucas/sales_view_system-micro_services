{
  "name": "portfolio-micro-services",
  "version": "0.0.0",
  "description": "Portfolio micro-services",
  "private": true,
  "scripts": {
    "test": "nps test.unit",
    "deploy-test": "nps deploy.test",
    "sync": "nps db.sync",
    "orm-config": "nps db.config",
    "migration-create": "nps db.config && ts-node ./node_modules/typeorm/cli.js migration:create -d src/core/database/migrations",
    "migrate": "nps db.migrate.run",
    "revert": "nps db.migrate.revert",
    "setup": "nps db.setup"
  },
  "dependencies": {
    "aws-lambda": "^1.0.6",
    "aws-sdk": "^2.817.0",
    "axios": "^0.21.1",
    "npm-which": "^3.0.1",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.29",
    "typescript-memoize": "^1.0.0-alpha.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.68",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "@types/supertest": "^2.0.10",
    "dotenv": "^8.2.0",
    "jest": "^26.6.3",
    "jsonfile": "^6.1.0",
    "kill-port": "^1.6.0",
    "nps": "^5.10.0",
    "nps-utils": "^1.7.0",
    "serverless": "^2.16.1",
    "serverless-cloudformation-parameters": "^0.1.1",
    "serverless-deployment-bucket": "^1.3.0",
    "serverless-export-env": "github:Rodolfobm/serverless-export-env",
    "serverless-layers": "^2.3.3",
    "serverless-offline": "^6.8.0",
    "serverless-webpack": "^5.3.5",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.12",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3",
    "webpack": "^5.11.0",
    "webpack-filter-warnings-plugin": "^1.2.1"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "testEnvironment": "node"
  },
  "author": "Lucas Ferreira",
  "license": "MIT"
}
